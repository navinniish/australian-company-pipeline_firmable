# Australian Company Pipeline - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=australian_companies
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password

# LLM Configuration - Anthropic Claude
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_TEMPERATURE=0.3

# OpenAI Configuration (Alternative)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here

# Processing Limits (Adjust for Production)
CC_MAX_RECORDS=100
ABR_MAX_RECORDS=100
EXTRACT_BATCH_SIZE=10
MATCHING_BATCH_SIZE=10

# Enhanced Pipeline Settings
ENABLE_MANUAL_REVIEW=true
ENABLE_POSTCODE_VALIDATION=true
ENABLE_SOCIAL_MEDIA_EXTRACTION=true
LLM_CONCURRENT_REQUESTS=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: External Services
# POSTGRESQL_SSL_MODE=require
# REDIS_URL=redis://localhost:6379/0